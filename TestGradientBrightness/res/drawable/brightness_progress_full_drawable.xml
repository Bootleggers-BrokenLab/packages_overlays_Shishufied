<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:priv-android="http://schemas.android.com/apk/prv/res/android"
    android:autoMirrored="true">
    <item android:id="@*com.android.systemui:id/slider_foreground"
        android:height="@*com.android.systemui:dimen/rounded_slider_height">
        <shape>
            <size android:height="@*com.android.systemui:dimen/rounded_slider_height" />
            <gradient 
                android:startColor="?*android:attr/colorAccent"
                android:endColor="#fff"
                android:angle="270"/>
            <corners android:radius="@*com.android.systemui:dimen/rounded_slider_corner_radius"/>
        </shape>
    </item>
    <item
        android:id="@*com.android.systemui:id/slider_icon"
        android:gravity="center_vertical|right"
        android:height="@*com.android.systemui:dimen/rounded_slider_icon_size"
        android:width="@*com.android.systemui:dimen/rounded_slider_icon_size"
        android:right="@*com.android.systemui:dimen/rounded_slider_icon_inset">
        <com.android.systemui.util.AlphaTintDrawableWrapper
            android:drawable="@*com.android.systemui:drawable/ic_brightness"
            android:tint="?*android:attr/textColorPrimaryInverse"
        />
    </item>
</layer-list>
